<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BarGraphView">
        <attr name="bgv_bar_color" format="color" />
        <attr name="bgv_bubble_color" format="color" />
        <attr name="bgv_line_width" format="dimension" />
        <attr name="bgv_text_size_l" format="dimension" />
        <attr name="bgv_text_size_m" format="dimension" />
        <attr name="bgv_text_size_s" format="dimension" />
        <attr name="bgv_bubble_gap" format="dimension" />
        <attr name="bgv_text_to_line_gap" format="dimension" />
        <attr name="bgv_hide_image" format="boolean" />
        <attr name="bgv_image_width" format="dimension" />
        <attr name="bgv_image_border_width" format="dimension" />
        <attr name="bgv_src" format="reference" />
    </declare-styleable>

    <declare-styleable name="LineChartView">
        <attr name="lcv_curve_color" format="color" />
        <attr name="lcv_background_color" format="color" />
        <attr name="lcv_bubble_color" format="color" />
        <attr name="lcv_line_width" format="dimension" />
        <attr name="lcv_curve_width" format="dimension" />
        <attr name="lcv_text_size_l" format="dimension" />
        <attr name="lcv_text_size_m" format="dimension" />
        <attr name="lcv_text_size_s" format="dimension" />
        <attr name="lcv_text_size_symbol" format="dimension" />
        <attr name="lcv_bubble_gap" format="dimension" />
        <attr name="lcv_text_to_line_gap" format="dimension" />
        <attr name="lcv_text_content1" format="string" />
        <attr name="lcv_text_content2" format="string" />
        <attr name="lcv_show_type">
            <enum name="SHOW_TYPE_WEEK" value="2" />
            <enum name="SHOW_TYPE_MONTH" value="3" />
            <enum name="SHOW_TYPE_YEAR" value="1" />
        </attr>
        <attr name="lcv_point_radius" format="dimension" />
        <attr name="lcv_symbol_radius" format="dimension" />
        <attr name="lcv_image_width" format="dimension" />
        <attr name="lcv_image_border_width" format="dimension" />
        <attr name="lcv_src" format="reference" />
    </declare-styleable>
</resources>
